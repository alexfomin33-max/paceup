{
  // Принудительно LF — Cursor на Windows по умолчанию ставит CRLF и
  // переключается обратно; без этого всё снова даёт «призрачные» diff
  "files.eol": "\n",
  // Отключаем Format on Save для Dart — избегаем «призрачных» правок
  // (пустые строки, ///, CRLF) в diff при каждом сохранении
  "[dart]": {
    "editor.formatOnSave": false
  },
  // Отключаем подтверждение синхронизации Git (pull/push)
  "git.confirmSync": false,
  "git.confirmForceSync": false,
  "git.autofetch": false,
  "git.enableSmartCommit": true,
  "git.autoRepositoryDetection": false,
  "git.suggestSmartCommit": false,
  "git.confirmEmptyCommits": false,
  "git.allowForcePush": true,
  "git.allowNoVerifyCommit": true
}
