<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ─────────── Ночной режим: фиксируем тёмный фон для сплэша ─────────── -->
    <!-- Явно задаём тёмный фон через drawable, чтобы фон всегда был чёрным. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- ─────────── Тёмный статус бар для splash screen ─────────── -->
        <!-- Устанавливаем чёрный цвет статус бара и светлые иконки для тёмного фона -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Тема окна во время и после инициализации Flutter. Держим светлую тему,
         чтобы в тёмной системе фон также оставался белым. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
