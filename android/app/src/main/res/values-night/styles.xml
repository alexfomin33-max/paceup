<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ─────────── Ночной режим: фиксируем белый фон для сплэша ─────────── -->
    <!-- В тёмной теме по умолчанию использовалась чёрная тема, из-за чего перед
         отрисовкой Flutter появлялся чёрный экран. Переключаем на светлую тему
         и явно задаём фон через drawable, чтобы фон всегда был белым. -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- ─────────── Белый статус бар для splash screen ─────────── -->
        <!-- Устанавливаем белый цвет статус бара и тёмные иконки для белого фона -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Тема окна во время и после инициализации Flutter. Держим светлую тему,
         чтобы в тёмной системе фон также оставался белым. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
